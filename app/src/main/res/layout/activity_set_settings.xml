<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvin.integrate_zxing.SetSettingsActivity">

    <TextView
        android:id="@+id/lblServerAddress"
        android:text="@string/server_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewStyle"
        android:layout_marginTop="7dp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/txtServerAddres"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/lblServerAddress"
        android:inputType="number"
        android:digits="1234567890."
        android:hint="192.168.0.100"
        android:textAlignment="center"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@+id/lblPortNumber"
        android:text="@string/port_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewStyle"
        android:layout_below="@+id/txtServerAddres"
        android:layout_marginTop="7dp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/txtPortNumber"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/lblPortNumber"
        android:inputType="number"
        android:maxLength="4"
        android:digits="1234567890"
        android:hint="8080"
        android:textAlignment="center"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@+id/lblServerServlet"
        android:text="@string/servlet_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewStyle"
        android:layout_below="@+id/txtPortNumber"
        android:layout_marginTop="7dp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/txtServerServlet"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/lblServerServlet"
        android:inputType="text|textPassword"
        android:hint="TEST"
        android:capitalize="characters"
        android:textAlignment="center"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:singleLine="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnSaveSettings"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/round_button"
        android:onClick="btnSaveSetting_onClick"
        android:src="@drawable/save"/>


</RelativeLayout>
